# Environment Variables for Bible Downloader

# Server Configuration
PORT=3000
NODE_ENV=development

# Application Settings
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_TIMEOUT=30000
RATE_LIMIT_DELAY=2000

# File Storage
DOWNLOADS_DIR=./downloads
LOGS_DIR=./logs
TEMP_DIR=./temp

# Legal Compliance
REQUIRE_LEGAL_AGREEMENT=true
DEFAULT_PUBLIC_DOMAIN_ONLY=true

# API Configuration
API_RATE_LIMIT=100
API_WINDOW_MS=900000

# Wayback Machine Settings
WAYBACK_BASE_URL=http://web.archive.org
DEFAULT_CAPTURE_DATE=20171001

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Feature Flags
ENABLE_BIBLE_COM_EXTENDED=false
ENABLE_WAYBACK_FALLBACK=true
ENABLE_PROGRESS_WEBSOCKETS=false
